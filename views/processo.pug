extends layout

block content
  div(class="w3-container")
    header(class="w3-container w3-center w3-teal")
      h1= proc.nomeAluno
  div(class="w3-row")
    div(class="w3-col s6 w3-padding")
      div(class="w3-card-4")
        header(class="w3-container w3-teal")
          h3 Caraterização
        div(class="w3-container")  
          table(class="w3-table")
            tr
              th Id. Processo
              td= proc.processo
            tr
              th Data
              td= proc.data
            tr
              th Id. Aluno
              td= proc.idAluno
            tr
              th Nome Aluno
              td= proc.nomeAluno
            tr
              th Inst. Prov.
              td= proc.instProv
            tr
              th Curso Prov.
              td= proc.cursoProv
    div(class="w3-col s6 w3-padding")
      div(class="w3-card-4")
        header(class="w3-container w3-teal")
          h3 Equivalências
      div(class="w3-container")  
          table(class="w3-table")
            tr 
              th UC realizada
              th ECTS
              th Nota
              th %
              th UC equivalente
            each e in proc.equivalencias
              tr
                td= e.ucRealizada
                td= e.ects
                td= e.nota
                td= e.percent
                td= e.ucEquiv
  div(class="w3-container")
    header(class="w3-container w3-teal")
      h4 Nova Equivalência:
  div(class="w3-card-4")
    form(class="w3-container" method="POST" action="/processos/processo")
      input(class="w3-input" type="text" placeholder="Número/Ident" name="numero")
      input(class="w3-input" type="text" placeholder="Nome" name="nome")
      input(class="w3-btn w3-teal" type="submit" value="Adicionar")
  div(class="w3-container")
    footer(class="w3-container w3-teal")
      address Gerado por GUCS :: 2017-Dezembro
